[Unit]
Description=WPA Supplicant daemon
Before=network.target
After=syslog.target

[Service]
Type=dbus
BusName=fi.w1.wpa_supplicant1
EnvironmentFile=-/etc/sysconfig/wpa_supplicant
ExecStart=/usr/sbin/wpa_supplicant -u -s -c /etc/wpa_supplicant.conf -P /run/wpa_supplicant.pid $INTERFACES $DRIVERS $OTHER_ARGS

[Install]
WantedBy=multi-user.target
